<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="NumberProgressBar_Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="maxs">100</item>
        <item name="progresss">0</item>

        <item name="progress_unreached_colors">#CCCCCC</item>
        <item name="progress_reached_colors">#3498DB</item>

        <item name="progress_text_sizes">10sp</item>
        <item name="progress_text_colors">#3498DB</item>

        <item name="progress_reached_bar_heights">1.5dp</item>
        <item name="progress_unreached_bar_heights">0.75dp</item>
    </style>
    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>